{
  "compilerOptions": {
    "target": "ES2021",
    "module": "esnext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "outDir": "./dist",
    "rootDir": "./",
    "declaration": true,
    "resolveJsonModule": true,
    "paths": {
      "@shared/*": ["./shared/*"]
    }
  },
  "include": [
    "*.ts",
    "server/**/*.ts",
    "shared/**/*.ts",
    "client/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}