{
  "compilerOptions": {
    "target": "ES2021",
    "module": "esnext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "outDir": "./dist",
    "rootDir": "./",
    "declaration": true,
    "resolveJsonModule": true,
    "paths": {
      "@shared/*": [
        "./shared/*"
      ]
    },
    "typeRoots": [
      "./node_modules/@types",
      "./server/types"
    ],
    "lib": [
      "ESNext",
      "DOM"
    ]
  },
  "include": [
    "*.ts",
    "server/**/*.ts",
    "shared/**/*.ts",
    "client/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ],
  "extends": "./tsconfig.paths.json"
}