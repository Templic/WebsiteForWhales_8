# Dale Loves Whales - Environment Configuration Template
# Copy this file to .env and fill in your actual values

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
DATABASE_URL="postgresql://username:password@localhost:5432/dale_loves_whales"

# =============================================================================
# AI API KEYS (Required for AI consciousness features)
# =============================================================================

# OpenAI API Key - Get from: https://platform.openai.com/api-keys
OPENAI_API_KEY="sk-your-openai-key-here"

# Anthropic API Key - Get from: https://console.anthropic.com/
ANTHROPIC_API_KEY="sk-ant-your-anthropic-key-here"

# Google Gemini API Key - Get from: https://makersuite.google.com/app/apikey
GOOGLE_GEMINI_API_KEY="your-gemini-key-here"

# =============================================================================
# PAYMENT PROCESSING (Optional - for e-commerce features)
# =============================================================================

# Stripe Keys - Get from: https://dashboard.stripe.com/apikeys
STRIPE_SECRET_KEY="sk_test_your-stripe-secret-key"
STRIPE_PUBLISHABLE_KEY="pk_test_your-stripe-publishable-key"

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================

# JWT Secret - Use a strong random string (minimum 32 characters)
JWT_SECRET="your-super-secret-jwt-key-minimum-32-characters-long"

# Session Secret - Use a strong random string (minimum 32 characters)
SESSION_SECRET="your-session-secret-key-minimum-32-characters-long"

# =============================================================================
# EMAIL CONFIGURATION (Optional - for notifications)
# =============================================================================

# SMTP Configuration
SMTP_HOST="smtp.gmail.com"
SMTP_PORT="587"
SMTP_USER="your-email@gmail.com"
SMTP_PASS="your-app-password"

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================

# Environment
NODE_ENV="development"

# Port Configuration
PORT="3000"
VITE_PORT="5173"

# =============================================================================
# CONSCIOUSNESS PLATFORM SETTINGS
# =============================================================================

# Whale Wisdom API Settings
WHALE_WISDOM_ENABLED="true"
CONSCIOUSNESS_LEVEL="cosmic"

# Sacred Geometry Rendering
SACRED_GEOMETRY_ENABLED="true"
THREE_JS_PERFORMANCE_MODE="optimized"

# =============================================================================
# EXTERNAL INTEGRATIONS (Optional)
# =============================================================================

# Google Drive Integration
GOOGLE_DRIVE_CLIENT_ID="your-google-drive-client-id"
GOOGLE_DRIVE_CLIENT_SECRET="your-google-drive-client-secret"

# Taskade Integration
TASKADE_API_KEY="your-taskade-api-key"
TASKADE_WORKSPACE_ID="your-taskade-workspace-id"

# =============================================================================
# PERFORMANCE & MONITORING
# =============================================================================

# Memory Management
MEMORY_LEAK_DETECTION="true"
PERFORMANCE_MONITORING="true"
MAX_MEMORY_USAGE="400"

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================

# Debug Modes
DEBUG_MODE="false"
VERBOSE_LOGGING="false"
API_RATE_LIMITING="true"

# =============================================================================
# REPLIT SPECIFIC (Auto-configured in Replit environment)
# =============================================================================

# These are automatically set by Replit - do not modify
# REPL_ID="auto-configured"
# REPLIT_DOMAINS="auto-configured"
# REPLIT_DB_URL="auto-configured"